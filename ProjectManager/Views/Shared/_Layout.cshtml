<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{
    bool loggedIn = ProjectManager.Utils.Auth.IsLoggedIn();
    ProjectManager.Models.CurrentUserContext currentUser = ProjectManager.Utils.Auth.GetCurrentUser();
    <div class="header-container" @{if (loggedIn) { <text>style="background-color: @currentUser.BannerColor;"</text> } }>
        <div class="header">
            @{if (loggedIn && !string.IsNullOrEmpty(currentUser.LogoPath)) {<text><img class="logo pull-left" src="@currentUser.LogoPath" alt="Logo"></text>}}
            <h1><a @{if (loggedIn) { <text>style="color: @currentUser.TextColor;"</text> } } href="/Home">
                @{if (loggedIn) {<text>@currentUser.TenantName Project Manager</text>}else {<text>SaaS Project Manager</text>}}

                </a></h1>

            <div class="login pull-right">
                @{
                if (loggedIn)
                {
                    <span class="user" style="color:@currentUser.TextColor">@currentUser.Username</span>
                    <a class="btn btn-default" href="/Home/Logout">Logout</a>
                }
                else
                {
                    <form action="/Home/Login" method="post">
                        <label for="username">Username</label>
                        <input type="text" id="username" name="Username" />
                        <label for="password">Password</label>
                        <input type="password" id="password" name="Password" />
                        <input type="submit" value="Login" class="btn btn-default" />
                    </form>
                }
            }
            </div>
        </div>
    </div>
    
    <div class="main-content-container">
        <div class="row">
            @if (loggedIn)
            {
            <div class="col-md-2">
                <h2>Navigation</h2>
                <ul class="nav nav-pills nav-stacked">
                    <li @{if (ViewBag.Page == "Projects") { <text>class="active"</text> } }><a href="/Projects">Projects</a></li>
                    <li @{if (ViewBag.Page == "Users") { <text>class="active"</text> } }><a href="/Users">Users</a></li>
                    <li @{if (ViewBag.Page == "Requirements") { <text>class="active"</text> } }><a href="#">Requirements</a></li>
                    <li @{if (ViewBag.Page == "Statuses") { <text>class="active"</text> } }><a href="#">Statuses</a></li>
                    <li @{if (ViewBag.Page == "Settings") { <text>class="active"</text> } }><a href="#">Tenant Settings</a></li>
                </ul>
            </div>
            }
            <div class="col-md-10">
                @RenderBody()
            </div>
        </div>
    </div>
    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
