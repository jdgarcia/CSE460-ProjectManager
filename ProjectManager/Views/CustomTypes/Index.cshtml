@model List<ProjectManager.Models.RequirementType>

@{
    ViewBag.Title = "Index";
    ViewBag.Page = "CustomTypes";
}

<h2>Custom Requirement Types</h2>

<a href="/CustomTypes/Create" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> New Type</a>
<br /><br />

@{
    if (Model.Count == 0)
    {
        <p>You have not created any custom types.</p>
    }
    else
    {
        <table class="projects">
            <thead>
                <tr>
                    <td>Type Name</td>
                    <td></td>
                </tr>
            </thead>
        @foreach (var type in Model)
        {
            <tr>
                <td><a class="project-name" href="/CustomTypes/Details/@type.TypeId">@type.Name</a></td>
                <td><a href="/CustomTypes/Edit/@type.TypeId" class="btn btn-xs btn-info"><span class="glyphicon glyphicon-pencil"></span> Edit</a></td>
            </tr>
        }
        </table>
    }
}