@model ProjectManager.Models.RequirementType

@{
    ViewBag.Title = "Create";
    ViewBag.Page = "CustomTypes";
}

<h2>Create New Type</h2>

<form action="/CustomTypes/Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label for="typeName" class="col-sm-2">Type Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="typeName" name="typeName" autofocus="autofocus" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Create Type" class="btn btn-primary" />
            <a href="/CustomTypes" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>