@model ProjectManager.Models.RequirementType

@{
    ViewBag.Title = "Edit";
    ViewBag.Page = "CustomTypes";
}

<h2>Edit</h2>

<form action="/CustomTypes/Edit" method="post" class="form-horizontal">
    <input type="hidden" name="TypeId" value="@Model.TypeId" />

    <div class="form-group">
        <label for="typeName" class="col-sm-2">Type Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="typeName" name="Name" value="@Model.Name.Trim()" autofocus="autofocus" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
            <a href="/CustomTypes" class="btn btn-default">Discard Changes</a>
        </div>
    </div>
</form>