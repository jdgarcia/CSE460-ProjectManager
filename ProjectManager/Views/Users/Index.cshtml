@model List<ProjectManager.Models.UserContext>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

@{  
    if (Model.Count == 0)
    {
        <p>That's Impossible!!</p>
    }
    else
    {
        <table class="projects">
            <thead>
                <tr>
                    <td>User</td>
                    <td>Role</td>
                </tr>
            </thead>
        @foreach (var user in Model)
        {
            <tr>
                <td class="project-name">@user.Username</td>
                <td>@user.Role</td>
            </tr>
        }
        </table>
    }
}