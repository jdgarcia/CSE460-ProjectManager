@model List<ProjectManager.Models.UserContext>

@{
    ViewBag.Title = "Index";
    ViewBag.Page = "Users";
}

<h2>Users</h2>

<a href="/Users/Create" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Add User</a>
<br /><br />

@{  
    if (Model.Count == 0)
    {
        <p>That's Impossible!!</p>
    }
    else
    {
        <table class="projects">
            <thead>
                <tr>
                    <td>User</td>
                    <td>Role</td>
                    <td></td>
                </tr>
            </thead>
        @foreach (var user in Model)
        {
            <tr>
                <td class="project-name">@user.Username</td>
                <td>@user.Role</td>
                <td><a href="/Users/EditUser/@user.UserId" class="btn btn-xs btn-info"><span class="glyphicon glyphicon-pencil"></span> Edit</a></td>
            </tr>
        }
        </table>
    }
}