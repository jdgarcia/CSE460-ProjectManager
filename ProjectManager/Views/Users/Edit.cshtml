@model ProjectManager.Models.User

@{
    ViewBag.Title = "Edit";
    ViewBag.Page = "Users";
    //4 and 5 for Manager and employee, 1 for ADMIN  
}

<h2>Edit User</h2>

<form action="/Users/Edit" method="post" class="form-horizontal">
    <input type="hidden" name="UserId" value="@Model.UserId" />

    <div class="form-group">
        <label for="username" class="col-sm-2">Username</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="username" name="Username" value="@Model.Username" spellcheck="false" autofocus="autofocus" />
        </div>
    </div>

    <div class="form-group">
        <label for="userrole" class="col-sm-2">User Role</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => Model.RoleId,
                                  ProjectManager.Utils.DbUtils.GetRoleSelectItems(),
                                  new { id = "userrole", @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
            <a href="/Users" class="btn btn-default">Discard Changes</a>
        </div>
    </div>
</form>