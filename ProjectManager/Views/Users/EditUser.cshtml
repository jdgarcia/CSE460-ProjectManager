@model ProjectManager.Models.User

@{
    ViewBag.Title = "EditUser"; 
}

<h2>EditUser</h2>

<form action="/Users/EditUser" method="post">
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <label for="oldUserName">Old Username: @Model.Username</label>
    <br />
    <label for="newUserName">New Username: </label>
    <input type="text" id="username" name="Username" value="@Model.Username" />
    <br />
    <br />

    <label for="oldRole">Old User Role: @Model.Role.RoleId</label>
    <br />
    <label for="newRole">New User Role: </label>
    <input type="number" id="role" name="RoleId" value="@Model.Role.RoleId" />
    <br />
    <br />

    <input type="submit" value="Modify User" class="btn btn-primary" />
</form>