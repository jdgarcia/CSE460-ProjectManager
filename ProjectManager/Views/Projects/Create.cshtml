@model ProjectManager.Models.Project

@{
    ViewBag.Title = "Create";
    ViewBag.Page = "Projects";
}

<h2>Create Project</h2>

<form action="/Projects/Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label for="projectName" class="col-sm-2">Project Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="projectName" name="Name" placeholder="(Untitled Project)" autofocus="autofocus" />
        </div>
    </div>

    <div class="form-group">
        <label for="startDate" class="col-sm-2">Project Start Date</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" id="startDate" name="Start" value="@DateTime.Now.Date.ToString("yyyy-MM-dd")"/>
        </div>
    </div>

    <div class="form-group">
        <label for="endDate" class="col-sm-2">Project End Date</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" id="endDate" name="ExpectedEnd" value="@DateTime.Now.AddMonths(1).ToString("yyyy-MM-dd")"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" value="Create Project" class="btn btn-primary" />
            <a href="/Projects" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>