<table class="project-details">
    <tr>
        <td>Project Name:</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Manager:</td>
        <td>@Model.Manager</td>
    </tr>
    <tr>
        <td>Start Date:</td>
        <td>@Model.Start</td>
    </tr>
    <tr>
        <td>Expected End Date:</td>
        <td>@Model.ExpectedEnd</td>
    </tr>
    <tr>
        <td></td>
